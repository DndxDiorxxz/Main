local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Roblox Script Hub(W.I.P)",
   Icon = "rbxassetid://12345678", -- Replace with a valid asset ID
   LoadingTitle = "Roblox HUB SCRIPT",
   LoadingSubtitle = "by John Gaming",
   Theme = "Space",
   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "Big Hub"
   },

   Discord = {
      Enabled = true,
      Invite = "GPn7rgknhC",
      RememberJoins = true
   },

   KeySystem = true,
   KeySettings = {
      Title = "Key System",
      Subtitle = "Premium Hub Key System",
      Note = "Get Key here https://pastebin.com/8GYyUtaa",
      FileName = "Key",
      SaveKey = false,
      GrabKeyFromSite = true,
      Key = "https://pastebin.com/raw/8GYyUtaa"
   }
})

local MainTab = Window:CreateTab("Home", 4483362458)
local MainSection = MainTab:CreateSection("Mobile Script Section")

Rayfield:Notify({
   Title = "You executed the Free script",
   Content = "Enjoy",
   Duration = 5,
   Image = 13047715178,
   Actions = {
      Ignore = {
         Name = "Okay!",
         Callback = function()
            print("The user tapped Okay!")
         end
      },
   },
})

-- Infinite Jump Button
local Button = MainTab:CreateButton({
   Name = "Infinite Jump Toggle",
   Callback = function()
       _G.infinjump = not _G.infinjump

       if _G.infinJumpStarted == nil then
           _G.infinJumpStarted = true
           
           game.StarterGui:SetCore("SendNotification", {Title = "Youtube Hub"; Text = "Infinite Jump Activated!"; Duration = 5;})

           local plr = game:GetService('Players').LocalPlayer
           local m = plr:GetMouse()
           m.KeyDown:Connect(function(k)
               if _G.infinjump then
                   if k:byte() == 32 then
                       local humanoid = game:GetService('Players').LocalPlayer.Character:FindFirstChildOfClass('Humanoid')
                       humanoid:ChangeState('Jumping')
                       wait()
                       humanoid:ChangeState('Seated')
                   end
               end
           end)
       end
   end,
})

local ThirdTab = Window:CreateTab("Settings", 4483362458) -- Title, Image
local ThirdSection = ThirdTab:CreateSection("Settings")

-- Discord Server Button
local DiscordButton = ThirdTab:CreateButton({
   Name = "Discord Server",
   Callback = function()
       local copy = "https://discord.gg/GPn7rgknhC"
       setclipboard(copy)
       print("Discord link copied to clipboard!")
   end,
})
